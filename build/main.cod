@cod-include {
    reset.cod
}
@cod-defines {
    offwhite #efefef
    grayskull #666
}
@font-face {
    fof 'MavenProBlack'
    src url('/theme/fonts/mavenpro/maven_pro_black-webfont.eot')
    src url('/theme/fonts/mavenpro/maven_pro_black-webfont.eot?#iefix') format('eot'), \
         url('/theme/fonts/mavenpro/maven_pro_black-webfont.woff') format('woff'), \
         url('/theme/fonts/mavenpro/maven_pro_black-webfont.ttf') format('truetype'), \
         url('/theme/fonts/mavenpro/maven_pro_black-webfont.svg#webfontXhB2DgBK') format('svg')
    fow nm
    fot nm
}
