//!cofoh.com/css-on-diet-1.7
@cod-include {
    reset.cod
    fonts.cod
    fontawesome.cod
}
@cod-defines {
    offwhite #efefef
    ash #333
    grayash #444
    grayskull #555
    bluedust #0075c0
    bluedust-ethereal #0075c088
    ghostblack #000000cc
}

// Roots
html {
    fos 1.3vw
}
body {
    ma- 0
    ovx hi
    bac white
    fof 'MavenProRegular'
}
h1, h2, h3, h4, h5, h6 {
    fof 'MavenProMedium'
}

// Header
div#header-block {
    mab 5vh
}
div#header-block:after {
    // forces a clear after the header block
    cle both
    vis hi
    dis bl
    hei 0
    con "."
}
header#header-title {
    flo left
    ma-
}
header#header-title h1 {
    dis ib
    mal 1.5rem
    pat .5rem
    fos 4vw
    tes .33rem .33rem .5rem ghostblack
}
header#header-title h1 a {
    ted no
    col offwhite
}
header#header-title h1 a:hover {
    col bluedust
}
header#header-title h2 {
    mal 3rem
    pa- .5rem 1.5rem .5rem 1.5rem
    bra .85rem
    bac ash
    fos 1.8vw
    col offwhite
    tes .25rem .25rem .33rem ghostblack
    cur de
}

// Search
form#searchbox {
    dis ib
    vea super
    mal 1rem
}
form#searchbox input {
    wid 20rem
    bos bluedust-ethereal .1rem .1rem .1rem is
    b-- 0
    pa- .25rem .5rem
    bac white
    fos 1.25vw
    fof 'FontAwesome'
    col bluedust
}

// Menu & Social Links Shared
nav ul, aside.social ul {
    dis ib
    fos 0
}
nav li, aside.social li {
    dis ib
}
nav li.active, nav li:hover {
    bac bluedust
}
nav li a, aside.social li a {
    fos 1.8vw
    ted no
    col offwhite
}

// Menu
div#header-nav {
    bac ash
}
nav {
    pat 3rem
}
nav li {
    mar .5rem
    pa- .25rem .5rem
    bra .5rem .5rem 0 0
    bac grayskull
}

// Social Links
aside.social {
    flo right
    dis ib
    ma- .5rem .5rem 0 0
}
aside.social li {
    pa- 0 .25rem
}
aside.social li a {
    tes .25rem .25rem .5rem #ffffff44
}

// Primary Content
div#content {
    wid 88vw
    ma- au
    ov- hi
}
article h1, article h2, article h3, article h4, article h5, article h6 {
    fow bo
}

// Footer
footer#site-footer {
    wid 100vw
    ov- hi
    mat 10vh
    bac grayash
    col offwhite
}
footer#site-footer h1 {
    ma- .5rem
    fos 1.4vw
    fot it
}
footer#site-footer li {
    ma- 0 0 .33rem .5rem
    tea left
}
footer#site-footer li a {
    fos 1vw
    ted un
    col offwhite
}

// Recent Articles List
aside#articles-list {
    flo left
    wid 66vw
    bac grayskull
    pos re
}

// Blogroll
aside#links {
    bac grayash
    wid 34vw
    flo left
}
aside#links li a {
    ted no
}
aside#links span.links-name {
    fos 115%
    ted un
}

// Credits
address#credits {
    cle both
    pa- .25vh 1vw .25vh 0
    bac ash
    tea right
    fos 1vw
}
