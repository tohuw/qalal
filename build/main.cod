html {
    wid %%
    fos 1.5rem
}
body {
    ma- 0
    ovx hi
    bac offwhite
    fof 'MavenProRegular'
}
h1, h2, h3, h4, h5, h6 {
    fof 'MavenProMedium'
}
#header-block {
    mab 1rem
}
#header-block:after {
    cle both
    vis hi
    dis bl
    hei 0
    con "."
}
header#header-title {
    flo left
    ma- 0 2rem .5rem 0
}
header#header-title h1 {
    dis ib
    mal 1.1rem
    fos 2.5rem
    tes .01rem .01rem .02rem black
}
header#header-title h1 a {
    ted no
    col royalblue
}
header#header-title h2 {
    mal 2.25rem
    fos .85rem
    col grayskull
    cur de
}
form#searchbox {
    dis ib
    mal 1rem
}
form#searchbox input {
    wid 8rem
    bra 1rem
    pa- 0 .5rem
    bac white
    fos .85rem
    col royalblue
}
#header-nav {
    flo right
    tea right
}
nav h1, aside.menu h1 {
    dis ib
    flo right
    ma- .25rem 1.1rem 0 .25rem
    fos .7rem
    fof 'MavenProBold'
    col grayskull
}
nav ul, aside.menu ul {
    dis ib
}
nav li, aside.menu li {
    dis ib
    ma- 0 .25rem
    fos .65rem
}
nav li a, aside.menu li a {
    ted un
}
#content {
    wid 88vw
    ma- au
    ov- hi
}
article h1, article h2, article h3, article h4, article h5, article h6 {
    fow bo
}
footer#site-footer {
    pos ab
    bot 0
    wid %%
    bac grayskull
    tea right
    fos .7rem
    col ivory
}
footer#site-footer address {
    pa- .5rem
}
footer#site-footer a {
    col ivory
}
