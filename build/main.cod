}
@font-face {
    fof 'MavenProRegular'
    src url('/theme/fonts/mavenpro/maven_pro_regular-webfont.eot')
    src url('/theme/fonts/mavenpro/maven_pro_regular-webfont.eot?#iefix') format('eot'), \
         url('/theme/fonts/mavenpro/maven_pro_regular-webfont.woff') format('woff'), \
         url('/theme/fonts/mavenpro/maven_pro_regular-webfont.ttf') format('truetype'), \
         url('/theme/fonts/mavenpro/maven_pro_regular-webfont.svg#webfontOM8fITNz') format('svg')
    fow nm
