//!cofoh.com/css-on-diet-1.7
@cod-include {
    reset.cod
    fonts.cod
    fontawesome.cod
}
@cod-defines {
    offwhite #efefef
    fadedwhite #efefefaa
    ash #333
    grayash #444
    grayskull #555
    bluedust #0075c0
    bluedust-ethereal #0075c088
    ghostblack #000000cc
    nearlygone #00000033

    forceclear cle both; \
        vis hi; \
        dis bl; \
        hei 0; \
        con ".";
}

// Roots
html {
    fos 1.5vw
}
body {
    ma- 0
    ovx hi
    bac white
    fof 'MavenProRegular'
}
h1, h2, h3, h4, h5, h6 {
    fof 'MavenProMedium'
}

// Header
div#header-block {
    mab 5vh
}
div#header-block:after {
    forceclear
}
header#header-title {
    flo left
    ma-
}
header#header-title h1 {
    dis ib
    mal 1.5rem
    pat .5rem
    fos 3rem
    tes .33rem .33rem .5rem ghostblack
}
header#header-title h1 a {
    ted no
    col offwhite
}
header#header-title h1 a:hover {
    col bluedust
}
header#header-title h2 {
    mal 3rem
    pa- .5rem 1.5rem .5rem 1.5rem
    bra .85rem
    bac ash
    fos 1.25rem
    col offwhite
    tes .25rem .25rem .33rem ghostblack
    cur de
}

// Search
form#searchbox {
    dis ib
    vea super
    mal 1rem
}
form#searchbox input {
    wid 20rem
    bos bluedust-ethereal .1rem .1rem .1rem is
    b-- 0
    pa- .25rem .5rem
    bac white
    fos 1.05rem
    fof 'FontAwesome'
    col bluedust
}

// Menu & Social Links Shared
nav ul, aside.social ul {
    dis ib
    fos 0
}
nav li, aside.social li {
    dis ib
}
nav li.active, nav li:hover {
    bac bluedust
}
nav li a, aside.social li a {
    fos 1.25rem
    ted no
    col offwhite
}

// Menu
div#header-nav {
    bac ash
}
nav {
    pat 3rem
}
nav li {
    mar .5rem
    pa- .25rem .5rem
    bra .5rem .5rem 0 0
    bac grayskull
}

// Social Links
aside.social {
    flo right
    dis ib
    ma- .5rem .5rem 0 0
}
aside.social li {
    pa- 0 .25rem
}
aside.social li a {
    tes .25rem .25rem .5rem #ffffff44
}

// Primary Content
div#content {
    wid 88vw
    ma- au
    ov- hi
}
article h1, article h2, article h3, article h4, article h5, article h6 {
    mab 1.25rem
    fow bo
}
div#content article header {
    flo left
}
h1.post-title:before {
    col grayskull
    con '~'
}
h1.post-title {
    tea center
    fos 3.5rem
}
h1.post-title:after {
    col grayskull
    con '~'
}
article h1.post-title a {
    ted no
    col black
}
footer.post-info {
    ma- .5rem 0 1.5rem 0
    flo right
}
footer.post-info span {
    dis ih
    tea right
    lih 1.3em
    fos .85rem
    fot it
}
footer.post-info span.published, footer.post-info span.modified {
    dis ib
}
footer.post-info span.modified {
    fos .7rem
}
footer.postinfo span.tags {
    dis ib
}
footer.post-info address {
    tea right
    fos .9rem
    fot it
}
footer.post-info address a {
    col black
}
footer.post-info span.tags {
}
footer.post-info span.tags ul, footer.post-info span.tags ul li {
    dis ib
}
footer.post-info span.tags ul li:before {
    con ''
}
footer.post-info span.tags ul li {
    mar .5rem
}
div.post-content {
    cle bh
}
div.post-content h2 {
    fos 1.75rem
}
div.post-content h3 {
    fos 1.5rem
}
article p {
    mab 1rem
    lih 125%
}
article a:link {
    col ghostblack
}
article a:visited {
    col ash
}
article a:hover, article a:active {
    col black
}
article hr {
    b-- 0
    hei .2vh
    bai -webkit-linear-gradient(left, rgba(0,0,0,0), rgba(0,0,0,0.33), rgba(0,0,0,0))
    bai -moz-linear-gradient(left, rgba(0,0,0,0), rgba(0,0,0,0.33), rgba(0,0,0,0))
    bai -ms-linear-gradient(left, rgba(0,0,0,0), rgba(0,0,0,0.33), rgba(0,0,0,0))
    bai -o-linear-gradient(left, rgba(0,0,0,0), rgba(0,0,0,0.33), rgba(0,0,0,0)) 
}
article abbr {
    bb- 1p do grayskull
}
article ol {
    mal 1rem
    li- decimal inside no
    col grayskull
}
article ol li p {
    dis ib
}
article ul li:before {
    pos ab
    ma- .5rem 1.5rem 0 0
    fof 'FontAwesome'
    fos .85rem
    con '\f04b'
    col nearlygone
}
article ul li p {
    dis ib
    mal 1.5rem
}
article dt:after {
    con ':'
}
article dd {
    ma- 0 0 1rem 1rem
    fot it
}
article a.footnote-ref {
    pos re
    top -.5em
    pa- 0 .25em
    b-- .1em solid nearlygone
    bra 50%
    lih 0
    fos 75%
    ted no
}
article .footnote hr:after {
    pos re
    fos .95rem
    con 'Footnotes:'
}
article .footnote ol {
    mat 1.25rem
    fos .9rem
}
article a.footnote-backref {
    fos .8em
    ted no
}

// Error, Warning & Info Boxes
article .error:before, article .warning:before, article .info:before {
    pos ab
    fof 'FontAwesome'
    fos 2.75rem
    col nearlygone
}
article .error, article .warning, article .info {
    dis bl
    wid 95%
    mih 2rem
    ma- 0 auto .5rem auto
    pa- .5rem .5rem .5rem .5rem
    bra 2rem
    col ash
}
article .error p, article .warning p, article .info p {
    ma- 0
    pal 2rem
    fos .95rem
}
article .warning:before {
    con '\f071'
}
article .warning {
    bac #ffa
}
article .warning:hover {
    bac #ff8
    col black
}
article .info:before {
    con '\f05a'
}
article .info {
    bac #bde5f8
}
article .info:hover {
    bac #add5f8
    col black
}

// Isso
#isso-thread {
    pa- 1em 1rem 3rem 1rem
    bac offwhite
}
#isso-thread h4 {
    ma- 0 1rem 1rem
    tea center
    fos 1.25rem
    col ash
}
#isso-thread a:link {
    col ghostblack
}
#isso-thread a:visited {
    col ash
}
#isso-thread a:hover, #isso-thread a:active {
    col black
}
#isso-root {
    ma- 1rem
}
.isso-postbox .textarea {
    wid 85%fi
    mih 2rem
    pa- .5vw
    b-- 1p solid grayskull
    bac white
    fos .85rem
    col grayskull
}
.isso-postbox .input-wrapper input {
    flo left
    ma- .5rem .5rem .5rem 0
    fos .75rem
}
.isso-postbox .post-action {
    pat .5rem
}
.isso-postbox .post-action input {
    hei 1.25rem
    b-- 1p solid grayskull
    bac #00000009
    fos .7rem
    col ash
}
.isso-postbox .post-action input:hover {
    bac #0000000f
}
.isso-comment {
    cle bh
    wid 34.5rem
    pa- 1rem
    bac whitesmoke
}
.isso-comment-header span, .isso-comment-header a.author {
    par .5rem
    fot it
}
.isso-comment-header .spacer {
    dis no
}
.isso-comment-header .permalink:before {
    con '('
}
.isso-comment-header .permalink {
    fos .85rem
}
.isso-comment-header .permalink:after {
    con ')'
}
.isso-comment .text {
    ma- .5rem 2rem
    fos .9rem
}
.isso-comment a.upvote, .isso-comment a.downvote, .isso-comment span.spacer, .isso-comment a.edit {
    dis no
}
.isso-comment a.delete {
    mal 2rem
    pa- 0 .25rem
    b-- 1p solid grayskull
    bra .33rem
    bac #00000007
    fos .85rem
    ted no
}

// Footer
footer#site-footer {
    wid 100vw
    ov- hi
    mat 10vh
    bac grayash
    col offwhite
}
footer#site-footer h1 {
    ma- 1rem
    fos 1.85rem
    fot it
    col white
}
footer#site-footer li {
    ma- 0 0 1rem 1rem
    tea left
}
footer#site-footer li a {
    fos .85rem
    ted un
    col offwhite
}

// Recent Articles List
aside#articles-list {
    flo left
    wid 60vw
    bac grayskull
    pos re
}
aside#articles-list article {
    mih 10vh
}
aside#articles-list h2 {
    dis ib
}
aside#articles-list h2 a {
    fos 1.1rem
}
aside#articles-list a.comments-count:before {
    con '('
}
aside#articles-list a.comments-count {
    dis ib
    fot it
    ted no
    fos .85rem
}
aside#articles-list a.comments-count:after {
    con ')'
}
aside#articles-list aside.article-image {
    flo left
}
aside#articles-list aside.article-image img {
    hei 10vh
    mar .5rem
    bos .25rem .25rem 1.5rem #ffffff30
    bra 50%
    opa .95
}
aside#articles-list section.post-summary {
    ma- .5rem
    fos .85rem
    lih 110%
}

// Blogroll
aside#links {
    bac grayash
    wid 40vw
    flo left
}
aside#links li a {
    fot it
    ted no
}
aside#links span.links-name {
    fos 1.05rem
    fot nm
    ted un
}

// Credits
address#credits {
    cle both
    pa- .33rem 1rem
    bac ash
    tea right
    fos .8rem
    col fadedwhite
}
address#credits a {
    col fadedwhite
}
